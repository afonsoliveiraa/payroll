<%= turbo_frame_tag employee do %>

  <div class="card mt-2">
    <div class="card-body">

      <div class="employee p-2" id="<%= dom_id employee %>">
        <div class="d-flex justify-content-between">

          <div class="d-flex align-items-center">
            <% if employee.avatar.attached? %>
              <%= image_tag employee.avatar, class: "rounded-circle", style: "width: 48px; height: 48px;" %>
            <% else %>
              <%= image_tag "icon.PNG", alt: "Descrição da imagem", class: "rounded-circle",style: "width: 48px; height: 48px;" %>
            <% end %>
            <div class="ms-3 d-flex align-items-baseline">
              <p class="mb-0 me-3 "><%= employee.id %></p>
              <div>
                <%= link_to employee.name, employee_path(employee), data: {turbo_frame: "_top"}, class: " mb-0 text-decoration-none " %>
                <p class="mb-0 text-secondary small">CPF <%= employee.cpf.gsub(/(\d{3})(\d{3})(\d{3})(\d{2})/, '\1.\2.\3-\4') %> | <%= employee.nature.description %></p>

              </div>
            </div>
          </div>

          <div class="d-flex align-items-start">
            <div class="dropdown">
              <button class="btn btn-sm text-uppercase" type="button" id="dropdownMenuButton<%= employee.id %>" data-bs-toggle="dropdown" aria-expanded="false">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708"/>
                </svg>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton<%= employee.id %>">
                <li>
                  <%= button_to employee_path(employee), method: :delete, data: { turbo_frame: "_top" }, class: "dropdown-item" do %>
                    Delete
                  <% end %>
                </li>
                <li>
                  <%= link_to "Edit", edit_employee_path(employee), class: "dropdown-item" %>
                </li>
              </ul>
            </div>
          </div>
          
        </div>
      </div>

    </div>
  </div>



<% end %>
