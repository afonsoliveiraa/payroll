<%= turbo_stream_from "departments" %>

<main>


  <div class="row g-5">

    <div class="col-md-6 mx-auto rounded-0 ">

      <div class="header py-4 ">
        <%= link_to "New department", new_department_path, data: { turbo_frame: dom_id(Department.new) } %>
      </div>
      

      <%= turbo_frame_tag Department.new %>
      <%= turbo_frame_tag "departments" do %>
        <%= render @departments %>

      <% end %>

      <div class="py-4 float-end">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>

    </div>
        
  </div>

</main>
