<div class="col-md-12">
  <div class="card border-0 shadow mt-4">
    <div class="card-body p-4">

      <%= form_with(model: department, class: 'needs-validation', local: true) do |form| %>
        <% if department.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading"><%= pluralize(department.errors.count, "error") %> prohibited this department from being saved:</h4>
            <ul>
              <% department.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="d-flex justify-content-between align-items-center mb-3">

          <div class="d-flex align-items-baseline">
            <p class="fs-6 mb-0 me-3"><%= department.id %></p>
            <div class="ms-3">
              <p class="fs-6""><%= department.description %></p>
            </div>
          </div>

          <%= link_to departments_path, class: "btn " do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-chevron-up " viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M7.646 4.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 5.707l-5.646 5.647a.5.5 0 0 1-.708-.708z"/>
            </svg>
          <% end %>

        </div>

        <div class="form-floating mb-3">
          <%= form.text_field :description, class: "form-control", placeholder: "Description" %>
          <%= form.label :description, class: "form-label" %>
        </div>

        <div class="form-floating mb-3">
          <%= form.text_field :address, class: "form-control", placeholder: "Address" %>
          <%= form.label :address, class: "form-label" %>
        </div>

        <div class="form-floating mb-3">
          <%= form.text_field :phone, class: "form-control", placeholder: "Phone" %>
          <%= form.label :phone, class: "form-label" %>
        </div>
        
        <div class="d-flex justify-content-center">
          <div class="w-50">
            <%= form.button class: 'btn btn-lg btn-outline-dark w-100 rounded' do %>
              Save Department
            <% end %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
