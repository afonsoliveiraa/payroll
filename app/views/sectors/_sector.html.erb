<%= turbo_frame_tag sector do %>

<div class="my-5">


  <div class="sector" id="<%= dom_id sector %>">
    <div class="d-flex justify-content-between">

      <div class="d-flex align-items-baseline">
        <p class="mb-0 me-3 fw-medium"><%= sector.id %></p>
        <div class="ms-3">
          <p class="mb-0 fw-medium"><%= sector.description %></p>
        </div>
      </div>

      <div class="d-flex align-items-start">
        <div class="dropdown">
          <button class="btn btn-sm text-uppercase" type="button" id="dropdownMenuButton<%= sector.id %>" data-bs-toggle="dropdown" aria-expanded="false">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708"/>
            </svg>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton<%= sector.id %>">
            <li>
              <%= button_to department_sector_path(@department, sector), method: :delete, data: { turbo_frame: "_top" }, class: "dropdown-item" do %>
                Delete
              <% end %>
            </li>
            <li>
              <%= link_to "Edit", edit_department_sector_path(@department, sector), class: "dropdown-item" %>
            </li>
          </ul>
        </div>
      </div>
      
    </div>
  </div>


</div>

<% end %>
