<div class="col-md-12">
  <div class="card border-0 shadow mt-4">
    <div class="card-body p-4">

      <%= form_with(model: [@employee, note], class: 'needs-validation', local: true) do |form| %>
        <% if note.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading"><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h4>
            <ul>
              <% note.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="d-flex justify-content-between align-items-center mb-3">

          <div class="d-flex align-items-baseline">
            <p class="fs-6 mb-0 me-3"><%# note.event.id %></p>
            <div class="ms-3">
              <p class="fs-6"><%# note.event.description %></p>
            </div>
          </div>

          <%= link_to employee_path(@employee), class: "btn " do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-chevron-up " viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M7.646 4.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 5.707l-5.646 5.647a.5.5 0 0 1-.708-.708z"/>
            </svg>
          <% end %>

        </div>

        <div class="form-floating mb-3">
          <%= form.hidden_field :employee_id, class: "form-control", placeholder: "Value", value: @employee.id %>
          <%# form.label :employee_id, class: "form-label", style: "display: block" %>
        </div>

        <div class="form-floating mb-3">
          <%= form.select :event_id, options_for_select(Event.all.map { |e| [e.description, e.id] }, selected: note.event_id), {}, class: "form-select", placeholder: "Event" %>
          <%= form.label :event_id, class: "form-label", style: "display: block" %>
        </div>

        <div class="form-floating mb-3">
          <%= form.text_field :value, class: "form-control", placeholder: "Value" %>
          <%= form.label :value, class: "form-label", style: "display: block" %>
        </div>

        <div class="row g-2">
          <div class="col-md">
            <div class="form-floating mb-3">
              <%= form.date_field :start_date, class: "form-control", placeholder: "Start Date" %>
              <%= form.label :start_date, class: "form-label", style: "display: block" %>
            </div>
          </div>
          <div class="col-md">
            <div class="form-floating mb-3">
              <%= form.date_field :end_date, class: "form-control", placeholder: "End Date" %>
              <%= form.label :end_date, class: "form-label", style: "display: block" %>
            </div>
          </div>
        </div>

        <div class="form-floating mb-3">
          <%= form.text_field :reference, class: "form-control", placeholder: "Reference" %>
          <%= form.label :reference, class: "form-label", style: "display: block" %>
        </div>

        <div class="d-flex justify-content-center">
          <div class="w-50">
            <%= form.submit "Save Note", class: 'btn btn-lg btn-outline-dark w-100 rounded' %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
