


<%= turbo_frame_tag note do %>

  <div class="card mt-2">
    <div class="card-body">

      <div class="note p-2 " id="<%= dom_id note %>">
        <div class="d-flex justify-content-between">

          <div class="d-flex align-items-baseline">
            <p class="fs-6 mb-0 me-3"><%= note.event.id %></p>
            <div class="ms-3">
              <p class="fs-6 mb-0"><%= note.event.description %></p>
              <p class="mb-0 opacity-75 ">
                <%= note.start_date.strftime("%d de %b %Y") %> at√© 
                <% if note.end_date %>
                  <%= note.end_date.strftime("%d de %b %Y") %>
                <% end %>
              </p>
            </div>
          </div>

          <div class="d-flex align-items-start">
            <p class="me-3  mb-0">
              <% if note.event.formula == 'Valor Informado' %>
                R$
              <% else %>
                %
              <% end %> 
              <%= note.value %>
            </p>
            <div class="dropdown">
              <button class="btn btn-sm text-uppercase" type="button" id="dropdownMenuButton<%= note.id %>" data-bs-toggle="dropdown" aria-expanded="false">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708"/>
                </svg>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton<%= note.id %>">
                <li>
                  <%= button_to employee_note_path(@employee, note), method: :delete, data: { turbo_frame: "_top" }, class: "dropdown-item" do %>
                    Delete
                  <% end %>
                </li>
                <li>
                  <%= link_to "Edit", edit_employee_note_path(@employee, note), class: "dropdown-item" %>
                </li>
              </ul>
            </div>
          </div>
          
        </div>
      </div>
    
    </div>
  </div>


<% end %>
