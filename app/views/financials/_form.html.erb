<div class="col-md-12">
  <div class="card border-0 shadow mt-4">
    <div class="card-body p-4">

      <%= form_with(model: [@employee, financial], class: 'needs-validation', local: true) do |form| %>
        <% if financial.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading"><%= pluralize(financial.errors.count, "error") %> prohibited this financial from being saved:</h4>
            <ul>
              <% financial.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="d-flex justify-content-between align-items-center mb-3">

          <div class="d-flex align-items-baseline">
            
            <div class="">
              <p class="fs-6">Formul√°rio</p>
            </div>
          </div>

          <%= link_to employee_path(@employee), class: "btn " do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-chevron-up " viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M7.646 4.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 5.707l-5.646 5.647a.5.5 0 0 1-.708-.708z"/>
            </svg>
          <% end %>

        </div>


        <div class="form-floating mb-3">
          <%= form.select :competence_id, options_for_select(Competence.all.map { |c| [c.description, c.id] }, selected: financial.competence_id), {}, class: "form-select", placeholder: "Competence" %>
          <%= form.label :competence_id, class: "form-label", style: "display: block" %>
        </div>

        <div class="form-floating mb-3">
          <%= form.date_field :reference, class: "form-control", placeholder: "Reference" %>
          <%= form.label :reference, class: "form-label", style: "display: block" %>
        </div>

        <div class="d-flex justify-content-center">
          <div class="w-50">
            <%= form.submit "Save Financial", class: 'btn btn-lg btn-outline-dark w-100 rounded' %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
