<div class="col-md-12">
  <div class="card border-0 shadow mt-4">
    <div class="card-body p-4">

      <%= form_with(model: competence, class: 'needs-validation', local: true) do |form| %>
        <% if competence.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading"><%= pluralize(competence.errors.count, "error") %> prohibited this competence from being saved:</h4>
            <ul>
              <% competence.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-floating mb-3">
          <%= form.text_field :description, class: "form-control", placeholder: "Description" %>
          <%= form.label :description, class: "form-label" %>
        </div>

        <div class="form-floating mb-3">
          <%= form.text_field :just_events, class: "form-control", placeholder: "Just Events" %>
          <%= form.label :just_events, class: "form-label" %>
        </div>

        <div class="d-flex justify-content-center">
          <div class="w-50">
            <%= form.button class: 'btn btn-lg btn-outline-dark w-100 rounded' do %>
              Save Competence
            <% end %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
