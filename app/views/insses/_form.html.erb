<div class="col-md-12">
  <div class="card border-0 shadow mt-4">
    <div class="card-body p-4">

      <%= form_with(model: inss, class: 'needs-validation', local: true) do |form| %>
        <% if inss.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading"><%= pluralize(inss.errors.count, "error") %> prohibited this inss from being saved:</h4>
            <ul>
              <% inss.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

                <div class="d-flex justify-content-between align-items-center mb-3">

          <div class="d-flex align-items-baseline">
            <p class="fs-6 mb-0 me-3">Faixa</p>
          </div>

          <%= link_to insses_path, class: "btn " do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-chevron-up " viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M7.646 4.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 5.707l-5.646 5.647a.5.5 0 0 1-.708-.708z"/>
            </svg>
          <% end %>

        </div>

        <div class="form-floating mb-3">
          <%= form.date_field :star_date, class: "form-control", placeholder: "Start Date" %>
          <%= form.label :star_date, class: "form-label" %>
        </div>

        <div class="form-floating mb-3">
          <%= form.date_field :end_date, class: "form-control", placeholder: "End Date" %>
          <%= form.label :end_date, class: "form-label" %>
        </div>

        <div class="form-floating mb-3">
          <%= form.text_field :lower_limit, class: "form-control", placeholder: "Lower Limit" %>
          <%= form.label :lower_limit, class: "form-label" %>
        </div>

        <div class="form-floating mb-3">
          <%= form.text_field :upper_limit, class: "form-control", placeholder: "Upper Limit" %>
          <%= form.label :upper_limit, class: "form-label" %>
        </div>

        <div class="form-floating mb-3">
          <%= form.text_field :aliquot, class: "form-control", placeholder: "Aliquot" %>
          <%= form.label :aliquot, class: "form-label" %>
        </div>

        <div class="d-flex justify-content-center">
          <div class="w-50">
            <%= form.button class: 'btn btn-lg btn-outline-dark w-100 rounded' do %>
              Save INSS
            <% end %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
